@startuml
title ORB_SLAM2 - Monocular - tracking
hide footbox
autonumber
loadImage -> TrackMonocular
TrackMonocular -> GrabImageMonocular
GrabImageMonocular -> track

box "tracking" #LightBlue

track -> MonocularInitialization : mState==NOT_INITIALIZED

track -> CheckReplacedInLastFrame : mState==OK
track -> CheckReplacedInLastFrame
end box
track -> TrackWithMotionModel
track -> TrackReferenceKeyFrame
track -> Relocalization
newpage
@enduml

